<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>

	<!-- Alias 설정 -->
	<typeAliases>
		<typeAlias alias="memberVO" type="com.carrot.domain.MemberVO"></typeAlias>
		<typeAlias alias="bookVO" type="com.carrot.domain.BookVO"></typeAlias>
		<typeAlias alias="bCateVO" type="com.carrot.domain.BCateVO"></typeAlias>
		<typeAlias alias="advertVO" type="com.carrot.domain.AdvertVO"></typeAlias>
		<typeAlias alias="attachImageVO" type="com.carrot.domain.AttachImageVO"></typeAlias>
		<typeAlias alias="cartVO" type="com.carrot.domain.CartVO"></typeAlias>
		<typeAlias alias="orderItemVO" type="com.carrot.domain.OrderItemVO"></typeAlias>
	</typeAliases>
	
	<!-- Sql Mapper 설정 -->
	<mappers>
		<mapper resource="mappings/MemberMapper.xml" />
		<mapper resource="mappings/BookMapper.xml" />
		<mapper resource="mappings/AdvertMapper.xml" />
		<mapper resource="mappings/ImageMapper.xml" />
		<mapper resource="mappings/CartMapper.xml" />
		<mapper resource="mappings/OrderMapper.xml" />
	</mappers>
	
</configuration>