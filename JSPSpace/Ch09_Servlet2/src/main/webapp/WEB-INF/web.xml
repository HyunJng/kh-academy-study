<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app.xsd" id="WebApp_ID" version="4.0">
  <display-name>Ch09_Servlet2</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <filter>
  	<filter-name>myFilter</filter-name>
  	<filter-class>p06.filter.basic.MyFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>myFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
<filter>
	<filter-name>NullParameter</filter-name>
	<filter-class>p06.filter.nullcheck.NullParameterFilter</filter-class>
</filter>
<filter-mapping>
	<filter-name>NullParameter</filter-name>
	<url-pattern>/1_nullcheck/*</url-pattern>
	<init-param>
		<param-name>parameterNames</param-name>
		<param-value>id,name</param-value>
	</init-param>
</filter-mapping>

  <context-param>
  	<param-name>driver</param-name>
  	<param-value>oracle.jdbc.driver.OracleDriver</param-value>
  </context-param>
  <context-param>
  	<param-name>savePath</param-name>
  	<param-value>c:\\savePath</param-value>
  </context-param>
  <servlet>
  	<servlet-name>InitParam</servlet-name>
  	<servlet-class>p01.servletconfig.InitParamServlet</servlet-class>
  	<init-param>
  		<param-name>dirPath</param-name>
  		<param-value>c:\\test</param-value>
  	</init-param>
  	<init-param>
  		<param-name>userid</param-name>
  		<param-value>admin</param-value>
  	</init-param>
  </servlet>
  <servlet-mapping>
  	<servlet-name>InitParam</servlet-name>
  	<url-pattern>/InitParam</url-pattern>
  </servlet-mapping>
</web-app>